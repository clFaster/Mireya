<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mireya Admin</title>
    
    <!-- Tailwind CSS via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#2563eb',
                        secondary: '#64748b',
                        accent: '#8b5cf6'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex">
                    <!-- Logo -->
                    <div class="flex-shrink-0 flex items-center">
                        <a href="/Admin" class="text-2xl font-bold text-primary">Mireya</a>
                    </div>
                    
                    <!-- Navigation Links -->
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                            <a href="/Admin" class="inline-flex items-center px-1 pt-1 border-b-2 border-transparent hover:border-primary text-sm font-medium text-gray-900 hover:text-primary transition-colors">
                                Dashboard
                            </a>
                            <a href="/Admin/Screens" class="inline-flex items-center px-1 pt-1 border-b-2 border-transparent hover:border-primary text-sm font-medium text-gray-900 hover:text-primary transition-colors">
                                Screens
                            </a>
                            <a href="/Admin/Assets" class="inline-flex items-center px-1 pt-1 border-b-2 border-transparent hover:border-primary text-sm font-medium text-gray-900 hover:text-primary transition-colors">
                                Assets
                            </a>
                            <a href="/Admin/Campaigns" class="inline-flex items-center px-1 pt-1 border-b-2 border-transparent hover:border-primary text-sm font-medium text-gray-900 hover:text-primary transition-colors">
                                Campaigns
                            </a>
                        </div>
                    }
                </div>
                
                <!-- User Menu -->
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="flex items-center">
                        <span class="text-sm text-gray-700 mr-4">@User.Identity.Name</span>
                        <form method="post" action="/Admin/Logout" class="inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors">
                                Logout
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <p class="text-center text-sm text-gray-500">
                &copy; @DateTime.Now.Year Mireya Digital Signage. All rights reserved.
            </p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
