@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="space-y-6">
    <!-- Welcome Section -->
    <div class="bg-white shadow rounded-lg p-6">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Welcome to Mireya Admin</h1>
        <p class="text-gray-600">Manage your digital signage displays and content</p>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Online Screens Card -->
        <div class="bg-white shadow rounded-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Online Screens</p>
                    <p id="online-screens-count" class="text-3xl font-bold text-gray-900 mt-2">@Model.OnlineScreens</p>
                </div>
                <div class="bg-blue-100 rounded-full p-3">
                    <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </div>
            </div>
            <div class="mt-4">
                <a href="/Admin/Screens" class="text-sm text-blue-600 hover:text-blue-800 font-medium">
                    View all screens →
                </a>
            </div>
        </div>

        <!-- Pending Approvals Card -->
        <div class="bg-white shadow rounded-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Pending Screen Approvals</p>
                    <p class="text-3xl font-bold text-gray-900 mt-2">@Model.PendingScreens</p>
                </div>
                <div class="bg-yellow-100 rounded-full p-3">
                    <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
            <div class="mt-4">
                <a href="/Admin/Screens?status=Pending" class="text-sm text-yellow-600 hover:text-yellow-800 font-medium">
                    Review pending →
                </a>
            </div>
        </div>

        <!-- Total Assets Card -->
        <div class="bg-white shadow rounded-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Total Assets</p>
                    <p class="text-3xl font-bold text-gray-900 mt-2">@Model.TotalAssets</p>
                </div>
                <div class="bg-green-100 rounded-full p-3">
                    <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                </div>
            </div>
            <div class="mt-4">
                <a href="/Admin/Assets" class="text-sm text-green-600 hover:text-green-800 font-medium">
                    Manage assets →
                </a>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Quick Actions</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <a href="/Admin/Assets/Upload" class="flex items-center p-4 border-2 border-gray-200 rounded-lg hover:border-blue-500 hover:bg-blue-50 transition-colors">
                <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                </svg>
                <div>
                    <p class="font-medium text-gray-900">Upload Assets</p>
                    <p class="text-sm text-gray-600">Add new images or videos</p>
                </div>
            </a>
            
            <a href="/Admin/Campaigns/Create" class="flex items-center p-4 border-2 border-gray-200 rounded-lg hover:border-blue-500 hover:bg-blue-50 transition-colors">
                <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                <div>
                    <p class="font-medium text-gray-900">Create Campaign</p>
                    <p class="text-sm text-gray-600">Design new content schedule</p>
                </div>
            </a>

            <a href="/Admin/Screens" class="flex items-center p-4 border-2 border-gray-200 rounded-lg hover:border-blue-500 hover:bg-blue-50 transition-colors">
                <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
                <div>
                    <p class="font-medium text-gray-900">Manage Screens</p>
                    <p class="text-sm text-gray-600">View and configure displays</p>
                </div>
            </a>
        </div>
    </div>

    <!-- Recent Activity (Placeholder for future implementation) -->
    <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">System Status</h2>
        <div class="space-y-3">
            <div class="flex items-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <svg class="w-2 h-2 mr-1" fill="currentColor" viewBox="0 0 8 8">
                        <circle cx="4" cy="4" r="3" />
                    </svg>
                    Online
                </span>
                <span class="ml-3 text-sm text-gray-600">API Server</span>
            </div>
            <div class="flex items-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <svg class="w-2 h-2 mr-1" fill="currentColor" viewBox="0 0 8 8">
                        <circle cx="4" cy="4" r="3" />
                    </svg>
                    Connected
                </span>
                <span class="ml-3 text-sm text-gray-600">Database</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Poll for online screen count updates every 5 seconds
        async function updateOnlineScreenCount() {
            try {
                const response = await fetch('/api/ScreenManagement/online/count', {
                    headers: {
                        'Accept': 'application/json'
                    }
                });
                
                if (response.ok) {
                    const count = await response.json();
                    const element = document.getElementById('online-screens-count');
                    if (element && element.textContent !== count.toString()) {
                        element.textContent = count;
                        // Add a subtle animation when count changes
                        element.classList.add('text-blue-600');
                        setTimeout(() => element.classList.remove('text-blue-600'), 500);
                    }
                }
            } catch (error) {
                console.error('Error fetching online screen count:', error);
            }
        }

        // Update immediately on load
        updateOnlineScreenCount();

        // Then update every 5 seconds
        setInterval(updateOnlineScreenCount, 5000);
    </script>
}
