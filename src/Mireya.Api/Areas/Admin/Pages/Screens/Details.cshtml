@page
@model DetailsModel
@{
    ViewData["Title"] = "Screen Details";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">@Model.Screen.Name</h1>
            <p class="text-gray-600 mt-1">Screen details and configuration</p>
        </div>
        <div class="flex space-x-3">
            <a href="/Admin/Screens" class="px-4 py-2 bg-gray-200 text-gray-900 font-medium rounded-lg hover:bg-gray-300 transition-colors">
                Back to List
            </a>
            <a href="/Admin/Screens/Edit?id=@Model.Screen.Id" class="px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                Edit
            </a>
        </div>
    </div>

    <!-- Screen Information -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Screen Information</h2>
        </div>
        <div class="px-6 py-4">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <dt class="text-sm font-medium text-gray-500">Screen Identifier</dt>
                    <dd class="mt-1 text-sm text-gray-900 font-mono">@Model.Screen.ScreenIdentifier</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">Status</dt>
                    <dd class="mt-1">
                        @{
                            var statusClass = Model.Screen.ApprovalStatus switch
                            {
                                ApprovalStatus.Approved => "bg-green-100 text-green-800",
                                ApprovalStatus.Pending => "bg-yellow-100 text-yellow-800",
                                ApprovalStatus.Rejected => "bg-red-100 text-red-800",
                                _ => "bg-gray-100 text-gray-800"
                            };
                        }
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @statusClass">
                            @Model.Screen.ApprovalStatus
                        </span>
                    </dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">Location</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Screen.Location</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">Connection Status</dt>
                    <dd class="mt-1" id="connection-status">
                        @if (Model.Screen.IsActive)
                        {
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                <svg class="w-2 h-2 mr-1 mt-0.5" fill="currentColor" viewBox="0 0 8 8">
                                    <circle cx="4" cy="4" r="3" />
                                </svg>
                                Online
                            </span>
                        }
                        else
                        {
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                <svg class="w-2 h-2 mr-1 mt-0.5" fill="currentColor" viewBox="0 0 8 8">
                                    <circle cx="4" cy="4" r="3" />
                                </svg>
                                Offline
                            </span>
                        }
                    </dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">Registered At</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Screen.CreatedAt.ToString("f")</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">Last Seen</dt>
                    <dd class="mt-1 text-sm text-gray-900">
                        @if (Model.Screen.LastSeenAt.HasValue)
                        {
                            @Model.Screen.LastSeenAt.Value.ToString("f")
                        }
                        else
                        {
                            <span class="text-gray-500">Never</span>
                        }
                    </dd>
                </div>

                @if (!string.IsNullOrEmpty(Model.Screen.Description))
                {
                    <div class="md:col-span-2">
                        <dt class="text-sm font-medium text-gray-500">Description</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.Screen.Description</dd>
                    </div>
                }
            </dl>
        </div>
    </div>

    <!-- Device Information -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Device Information</h2>
        </div>
        <div class="px-6 py-4">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <dt class="text-sm font-medium text-gray-500">Resolution</dt>
                    <dd class="mt-1 text-sm text-gray-900">
                        @if (Model.Screen is { ResolutionWidth: not null, ResolutionHeight: not null })
                        {
                            @($"{Model.Screen.ResolutionWidth}x{Model.Screen.ResolutionHeight}")
                        }
                        else
                        {
                            <span class="text-gray-500">Not reported</span>
                        }
                    </dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">User ID</dt>
                    <dd class="mt-1 text-sm text-gray-900 font-mono">@(Model.Screen.UserId ?? "Not assigned")</dd>
                </div>
            </dl>
        </div>
    </div>

    <!-- Content Section -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Assigned Content</h2>
        </div>
        @if (Model.CampaignAssets.Any())
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Campaign
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Asset
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Type
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Position
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Duration
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var item in Model.CampaignAssets)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    @item.CampaignName
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @item.AssetName
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @{
                                        var typeClass = item.AssetType switch
                                        {
                                            AssetType.Image => "bg-blue-100 text-blue-800",
                                            AssetType.Video => "bg-purple-100 text-purple-800",
                                            AssetType.Website => "bg-green-100 text-green-800",
                                            _ => "bg-gray-100 text-gray-800"
                                        };
                                    }
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @typeClass">
                                        @item.AssetType
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @item.Position
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @item.DurationSeconds seconds
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="px-6 py-8 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"></path>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No content assigned</h3>
                <p class="mt-1 text-sm text-gray-500">This screen has no campaigns assigned yet.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        const screenId = '@Model.Screen.Id';
        
        // Poll for screen status updates every 3 seconds
        async function updateScreenStatus() {
            try {
                const response = await fetch(`/api/ScreenManagement/${screenId}`, {
                    headers: {
                        'Accept': 'application/json'
                    }
                });
                
                if (response.ok) {
                    const screen = await response.json();
                    const statusElement = document.getElementById('connection-status');
                    
                    if (statusElement) {
                        const currentlyOnline = statusElement.querySelector('.bg-green-100') !== null;
                        
                        if (screen.isActive && !currentlyOnline) {
                            // Changed to online
                            statusElement.innerHTML = `
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                    <svg class="w-2 h-2 mr-1 mt-0.5" fill="currentColor" viewBox="0 0 8 8">
                                        <circle cx="4" cy="4" r="3" />
                                    </svg>
                                    Online
                                </span>`;
                        } else if (!screen.isActive && currentlyOnline) {
                            // Changed to offline
                            statusElement.innerHTML = `
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                    <svg class="w-2 h-2 mr-1 mt-0.5" fill="currentColor" viewBox="0 0 8 8">
                                        <circle cx="4" cy="4" r="3" />
                                    </svg>
                                    Offline
                                </span>`;
                        }
                    }
                }
            } catch (error) {
                console.error('Error updating screen status:', error);
            }
        }

        // Update immediately on load
        updateScreenStatus();
        
        // Then update every 3 seconds
        setInterval(updateScreenStatus, 3000);
    </script>
}

