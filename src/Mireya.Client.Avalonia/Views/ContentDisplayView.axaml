<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Mireya.Client.Avalonia.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="Mireya.Client.Avalonia.Views.ContentDisplayView"
             x:DataType="vm:ContentDisplayViewModel"
             Background="Black">

    <Design.DataContext>
        <vm:ContentDisplayViewModel />
    </Design.DataContext>

    <Grid>
        <!-- Main content area -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Image display -->
        <Image Grid.Row="0"
               Source="{Binding CurrentImage}"
               Stretch="Uniform"
               IsVisible="{Binding CurrentContentType, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static vm:ContentType.Image}}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center" />

        <!-- Video display -->
        <Border Grid.Row="0"
                Background="Black"
                IsVisible="{Binding CurrentContentType, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static vm:ContentType.Video}}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                <TextBlock Text="ðŸŽ¬ VIDEO PLAYBACK"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center" />
                <TextBlock Text="{Binding CurrentAssetName}"
                           FontSize="24"
                           Foreground="#AAAAAA"
                           HorizontalAlignment="Center" />
                <TextBlock Text="(Ready for video player integration)"
                           FontSize="16"
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0" />
            </StackPanel>
        </Border>

        <!-- Website display -->
        <Border Grid.Row="0"
                Background="Black"
                IsVisible="{Binding CurrentContentType, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static vm:ContentType.Website}}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                <TextBlock Text="ðŸŒ WEBSITE"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center" />
                <TextBlock Text="{Binding CurrentWebsiteUrl}"
                           FontSize="24"
                           Foreground="#AAAAAA"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="1200" />
                <TextBlock Text="(Ready for web browser integration)"
                           FontSize="16"
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0" />
            </StackPanel>
        </Border>
        <!-- No content message -->
        <Border Grid.Row="0"
                Background="Black"
                IsVisible="{Binding CurrentContentType, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static vm:ContentType.None}}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
                <TextBlock Text="ðŸ“º"
                           FontSize="72"
                           HorizontalAlignment="Center" />
                <TextBlock Text="{Binding StatusText}"
                           FontSize="32"
                           Foreground="White"
                           HorizontalAlignment="Center" />
                <TextBlock Text="{Binding DisplayName}"
                           FontSize="20"
                           Foreground="#AAAAAA"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0" />
            </StackPanel>
        </Border>

        <!-- Status overlay (bottom-right corner) -->
        <Border Grid.Row="0"
                Background="#DD000000"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,20,20"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                IsVisible="{Binding IsOverlayVisible}">
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding DisplayName}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White" />
                <TextBlock Text="{Binding StatusText}"
                           FontSize="14"
                           Foreground="#CCCCCC" />
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="Campaign:"
                               FontSize="12"
                               Foreground="#AAAAAA" />
                    <TextBlock Text="{Binding CurrentCampaignName}"
                               FontSize="12"
                               Foreground="White" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="Asset:"
                               FontSize="12"
                               Foreground="#AAAAAA" />
                    <TextBlock Text="{Binding CurrentAssetName}"
                               FontSize="12"
                               Foreground="White" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="Progress:"
                               FontSize="12"
                               Foreground="#AAAAAA" />
                    <TextBlock Text="{Binding CurrentAssetPosition}"
                               FontSize="12"
                               Foreground="White" />
                    <TextBlock Text="/"
                               FontSize="12"
                               Foreground="#AAAAAA" />
                    <TextBlock Text="{Binding TotalAssets}"
                               FontSize="12"
                               Foreground="White" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Debug controls (hidden by default) -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Spacing="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0"
                    Opacity="0.3">
            <Button Content="â—€ Previous"
                    Command="{Binding PreviousAssetCommand}"
                    Padding="15,10" />
            <Button Content="Toggle Overlay"
                    Command="{Binding ToggleOverlayCommand}"
                    Padding="15,10" />
            <Button Content="Next â–¶"
                    Command="{Binding NextAssetCommand}"
                    Padding="15,10" />
        </StackPanel>
    </Grid>

</UserControl>
