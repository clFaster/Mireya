<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Mireya.Client.Avalonia.ViewModels"
             xmlns:components="using:Mireya.Client.Avalonia.Views.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="Mireya.Client.Avalonia.Views.ContentDisplayView"
             x:DataType="vm:ContentDisplayViewModel"
             Background="Black">

    <Design.DataContext>
        <vm:ContentDisplayViewModel />
    </Design.DataContext>

    <Grid>
        <!-- Main content area -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Image display -->
        <components:ImageAssetDisplay Grid.Row="0"
                                      DataContext="{Binding}"
                                      IsVisible="{Binding CurrentContentType, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static vm:ContentType.Image}}" />

        <!-- Video display -->
        <components:VideoAssetDisplay Grid.Row="0"
                                      DataContext="{Binding}"
                                      IsVisible="{Binding CurrentContentType, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static vm:ContentType.Video}}" />

        <!-- Website display -->
        <components:WebsiteAssetDisplay Grid.Row="0"
                                        DataContext="{Binding}"
                                        IsVisible="{Binding CurrentContentType, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static vm:ContentType.Website}}" />

        <!-- No content message -->
        <components:NoContentDisplay Grid.Row="0"
                                     DataContext="{Binding}"
                                     IsVisible="{Binding CurrentContentType, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static vm:ContentType.None}}" />

        <!-- Status overlay (bottom-right corner) -->
        <components:StatusOverlay Grid.Row="0"
                                  DataContext="{Binding}"
                                  Margin="0,0,20,20"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Bottom" />

        <!-- Debug controls (hidden by default) -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Spacing="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0"
                    Opacity="0.3">
            <Button Content="◀ Previous"
                    Command="{Binding PreviousAssetCommand}"
                    Padding="15,10" />
            <Button Content="Toggle Overlay"
                    Command="{Binding ToggleOverlayCommand}"
                    Padding="15,10" />
            <Button Content="Next ▶"
                    Command="{Binding NextAssetCommand}"
                    Padding="15,10" />
        </StackPanel>
    </Grid>

</UserControl>
