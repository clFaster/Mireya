<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Mireya.Client.Avalonia.ViewModels"
        xmlns:views="using:Mireya.Client.Avalonia.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="650"
        x:Class="Mireya.Client.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Mireya Digital Signage Client"
        Width="800" Height="650"
        MinWidth="700" MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <ContentControl Content="{Binding CurrentView}">
        <ContentControl.DataTemplates>
            <!-- BackendSelectionViewModel -> BackendSelectionView -->
            <DataTemplate DataType="vm:BackendSelectionViewModel">
                <views:BackendSelectionView/>
            </DataTemplate>
            
            <!-- ClientStatusViewModel -> ClientStatusView -->
            <DataTemplate DataType="vm:ClientStatusViewModel">
                <views:ClientStatusView/>
            </DataTemplate>
        </ContentControl.DataTemplates>
    </ContentControl>

</Window>
